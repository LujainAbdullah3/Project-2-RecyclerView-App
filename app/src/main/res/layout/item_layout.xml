<?xml version="1.0" encoding="utf-8"?>
<!-- Modify this to design your list item style -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:backgroundTint="#2D470303"
    >


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/item_image"
            tools:src="@drawable/im1"
            android:layout_width="165dp"
            android:layout_height="163dp"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="200sp"
            android:layout_height="match_parent"
            android:layout_marginStart="165dp"
            android:layout_marginTop="-130dp"
            android:textColor="#505550"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="@string/hotal1"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@drawable/picture1"
            android:layout_marginTop="7dp"
            android:layout_marginStart="155dp"/>
        <TextView
            android:id="@+id/item_title1"
            android:layout_width="200sp"
            android:layout_height="50dp"
            android:layout_marginStart="180dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="-29dp"
            tools:text="@string/location1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>